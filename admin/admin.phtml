<section id="side-bar" class="col-md-3">
  <section class="panel">
    <div class="panel-heading">
      <h3>Admin</h3>
    </div>
    <div class="panel-body">
      <ul class="nav nav-pills nav-stacked">
        <li><a href="page-list">Page list</a></li>
        <li><a href="page-form">Add page</a></li>
      </ul>
    </div>
